    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#090D25"
    tools:context=".MainActivity">
    <TextView
        android:text="        WORK IN PROGRESS"
        android:textColor="#FFC107"
